{% extends '::view.html.twig' %}


{% block page_title %}O.C{% endblock %}

{% block page_subtitle %}Enviar email{% endblock %}

{% block page_content %}

    <div class="box">
        <div class="box-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-send"></span>
                Enviar Email
            </button>
            {{ form_end(form) }}
        </div>

        <div class="box-footer">
            <a href="{{ path('clienteemail_index') }}" class="btn btn-primary btn-sm">
                <span class="fa fa-list"></span>
                Parametros de Envio de E-mail
            </a>
        </div>

    </div>

    E-mail enviado:<br>

    {{ mensagem|raw }}

{% endblock %}
