{% extends '::view.html.twig' %}

{% block page_title %}FAQ-TI{% endblock %}

{% block page_subtitle %}Mostrar{% endblock %}

{% block page_content %}

    <div class="box">
        <div class="box-body">

            <table class="table table-responsive table-hover">
                <tbody>
                <tr>
                    <th>Titulo</th>
                    <td>{{ faqti.titulo }}</td>
                </tr>
                <tr>
                    <th>&nbsp;</th>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <th>&nbsp;</th>
                    <th>Descricao</th>
                </tr>
                <tr>
                    <th></th>
                    <td>{{ faqti.descricao|raw }}</td>
                </tr>
                <tr>
                    <th>&nbsp;</th>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <th>Tags</th>
                    <td>{{ faqti.tags }}</td>
                </tr>
