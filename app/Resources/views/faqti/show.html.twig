                </tr>
                </tbody>
            </table>

        </div>

        <div class="box-footer">
            <a href="{{ path('faqti_index') }}" class="btn btn-primary btn-sm">
                <span class="fa fa-list"></span>
            </a>
            <a href="{{ path('faqti_edit',{ 'id'  : faqti.id}) }}" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-edit"></span>
            </a>
        </div>

    </div>
{% endblock %}
